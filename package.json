  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "format": "prettier --check ./src"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.72.3",
    "styled-components": "^6.0.7"
