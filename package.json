    "@typescript-eslint/parser": "^6.3.0",
    "babel-jest": "^29.2.1",
    "eslint": "^8.46.0",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.2.1",
    "lint-staged": "^13.2.3",
    "metro-react-native-babel-preset": "0.76.7",
    "prettier": "^3.0.1",
